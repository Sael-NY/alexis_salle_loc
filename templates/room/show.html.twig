{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ room.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ room.name }}</td>
        </tr>
        <tr>
            <th>Capacity</th>
            <td>{{ room.capacity }}</td>
        </tr>
        <tr>
            <th>Images</th>
            <td>
                {% for image in room.images %}
                    <img src="{{ asset(image.path) }}" width="60" alt="">
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_room') }}">Liste</a>

    {{ include('room/delete.html.twig') }}

{% endblock %}